@page
@model AdminLTE.NET.Pages.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es-ar">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/lib/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/lib/admin-lte/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">

    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-info">
            <div class="card-header text-center">
                <div class="row justify-content-center">
                    <div class="col-6">
                        <img src="~/assets/logos/logo_empresa.png" width="160" class="mt-3" />
                    </div>
                </div>
            </div>
            <div class="card-body">

                <form action="/Home" method="post">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Usuario">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" class="form-control" placeholder="Contraseña">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            @*<button type="submit" class="btn btn-primary btn-block">Sign In</button>*@
                        </div>
                        <!-- /.col -->
                    </div>

                    <div class="social-auth-links text-center mt-2 mb-3">
                        <a asp-page="Index" class="btn btn-info btn-block">Sign In</a>
                        @*<button type="submit" class="btn btn-info btn-block">Sign In</button>*@
                    </div>
                    <!-- /.social-auth-links -->
                </form>

                <p class="mb-1">
                    <a href="forgot-password.html">He olvidado mi contraseña</a>
                </p>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->

    <div class="text-center mt-4">
        <a href="https://www.google.com.ar/">
            <img src="~/assets/logos/logo_empresa.png" style="height: 20px" />
        </a>
    </div>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 5 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/admin-lte/js/adminlte.min.js"></script>

</body>
</html>
